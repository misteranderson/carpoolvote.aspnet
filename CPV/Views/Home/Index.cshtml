		@{
			String PotentialRiderTitle = "I need a ride";
			if (String.Equals(Model.LanguageCode,CPV.CPVConstants.LANGUAGE_SPANISH,StringComparison.OrdinalIgnoreCase))
			{
				PotentialRiderTitle = "Necesito que me lleven";
			}
	
			String 	YourTripTitle = "Your trip";
			if (String.Equals(Model.LanguageCode,CPV.CPVConstants.LANGUAGE_SPANISH,StringComparison.OrdinalIgnoreCase))
			{
				YourTripTitle = "Tu viaje";
			}
			
			String YourAvailableDates = "Date(s) available";
			if (String.Equals(Model.LanguageCode,CPV.CPVConstants.LANGUAGE_SPANISH,StringComparison.OrdinalIgnoreCase))
