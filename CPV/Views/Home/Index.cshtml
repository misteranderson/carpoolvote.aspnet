<div id="intro" class="intro wrapper">
    <script>
        if ('@ViewData["ThemeName"]' === 'souls2thepolls') {
                    document.getElementById('intro').style.backgroundImage = 'url("@Href("~/res/forest.jpeg")")';
        }
    </script>
    <div class="intro__banner">
        <h1 class="intro__title">@String1</h1>
        <p class="intro__lead">@String2</p>
    </div>
    <ul class="ride">
        <li class="ride__panel needride" id="needride">
            <h3 class="ride__title">@StringRiders</h3>
            <div class="ride__copy">
                <p>@String3</p>
                <p>
                    @String4
                </p>
            </div>
            <p class="align-center">
                <a href="#need-ride" class="show-form button button--large" role="button">@String5</a>
